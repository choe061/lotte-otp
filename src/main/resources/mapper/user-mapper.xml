<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lotte.otp.repository.UserMapper">

    <select id="duplicateUserId" resultType="int">
        SELECT COUNT(id)
        FROM USER WHERE id=#{id}
    </select>

    <insert id="createUser" parameterType="com.lotte.otp.domain.UserVO">
        INSERT INTO USER(id, pw)
        VALUES(#{user.id}, #{user.pw})
    </insert>

    <select id="login" resultType="com.lotte.otp.domain.UserVO">
        SELECT uuid, id, pw
        FROM USER WHERE id=#{id}
    </select>

    <select id="getUUID" parameterType="int">
        SELECT uuid
        FROM USER WHERE id=#{id}
    </select>

</mapper>